<div style='display: inline; border-radius: 0.2rem; padding: 0.2rem; margin-right: 0.5rem;'>
  <% if submit_disable_with_false %>
    <%= button_tag("Search", disable_with: false) %>
  <% else %>
    <%= form.submit "Search" %>
  <% end %>

<% if @recent_transactions.length > 0 %>
  <div class="card relative w-100 p-0 flex-1 flex flex-col">
    <header class="flex items-center justify-between pt-4 pl-4 pr-2 pb-2">
      <h3 class="m-0 p-0">Recent transactions</h3>
      <%= link_to event_transactions_path(event_id: @event.slug), class: "flex items-center no-underline text-sm font-medium shrink-none" do %>
        See all
        <%= inline_icon "view-forward" %>
      <% end %>
    </header>
    <% @recent_transactions.each do |transaction| %>
      <a href="<%= url_for(transaction.local_hcb_code) %>" class="homepage-transaction text-sm <%= Flipper.enabled?(:hcb_code_popovers_2023_06_16, current_user) && (@event || transaction.local_hcb_code.event).present? ? "cursor-poiner hover:bg-gray-50 active:bg-gray-100 transition-colors dark:hover:bg-neutral-700 dark:active:bg-neutral-600" : "" %>" data-behavior="modal_trigger" data-modal="transaction_details_<%= transaction.local_hcb_code.__id__ %>">
        <div style="min-width:0;flex:1">
          <span class="truncate block"><%= transaction_memo(transaction) %></span>
          <div class="muted">
            <% if transaction.is_a?(CanonicalPendingTransaction) %>
              Pending &bull;
            <% end %>
            <% subtitle = transaction.date > 24.hours.ago ? "Earlier today" : "#{time_ago_in_words(transaction.date)} ago" %>
            <% if transaction.try(:raw_stripe_transaction) || transaction.try(:raw_pending_stripe_transaction_id) %>
              <% subtitle += ", #{transaction.stripe_cardholder.user.name}" %>
            <% end %>
            <%= subtitle %>
          </div>
        </div>
        <span class="tabular-nums <%= transaction.amount_cents > 0 ? "success-dark" : "error" %>"><%= render_transaction_amount transaction.amount_cents %></span>
      </a>

      <% if Flipper.enabled?(:hcb_code_popovers_2023_06_16, current_user) && (@event || transaction.local_hcb_code.event).present? %>
        <section class="modal modal--scroll modal--popover bg-snow" data-behavior="modal" role="dialog" id="transaction_details_<%= transaction.local_hcb_code.__id__ %>" data-state-url="<%= hcb_code_path(transaction.local_hcb_code) %>" data-state-title="<%= transaction.local_hcb_code.pretty_title(show_event_name: defined?(show_event_name), show_amount: defined?(show_amount), event_name: @event.name, amount_cents: transaction.amount) %>">
          <%= modal_header(transaction.local_hcb_code.pretty_title(show_event_name: defined?(show_event_name), show_amount: defined?(show_amount), event_name: @event.name, amount_cents: transaction.amount), external_link: url_for(transaction.local_hcb_code)) %>
          <%= turbo_frame_tag transaction.local_hcb_code.public_id, src: transaction.local_hcb_code.popover_path, loading: :lazy do %>
            <%= render partial: "application/loading_container" %>
          <% end %>
        </section>
      <% end %>
    <% end %>
  </div>
<% else %>
  <div class="card card w-100 text-center p-0 flex-1 flex flex-col items-center justify-center">
    <div class="max-w-xs">
      <h3 class="m-0 p-4 pb-0 mb-2">
        Recent transactions
      </h3>
      <p class="m-0 mb-4 muted">
        You haven’t made any transactions yet. When you do, they’ll show up here.
      </p>
    </div>
  </div>
<% end %>
